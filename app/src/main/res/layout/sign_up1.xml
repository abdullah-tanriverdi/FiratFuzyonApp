<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        android:gravity="center|top"
        android:background="@color/white">
    <ImageView

        android:id="@+id/loadingphoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="8dp"
        android:src="@drawable/man"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/loadingphotoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/loadingphoto"
        android:fontFamily="@font/poppins"
        android:textSize="15sp"
        android:textColor="@color/burgundy"
        android:text="Profil Fotoğrafı Yükle" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        android:elevation="20dp"
        android:background="@drawable/custombuttonloginpagerouting">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">



            <RelativeLayout
                android:id="@+id/signUpCardViewUsernameLayout"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_centerInParent="true"
                android:background="@drawable/custombuttonloginpagerouting"
                android:layout_marginBottom="16dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/custombuttonloginpagerouting"
                    app:tint="#ffff" />



                <EditText
                    android:id="@+id/signUpCardViewUsernameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:hint="İsim"
                    android:textColor="@color/burgundy"
                    android:textSize="15sp"
                    android:background="@null"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/signUpCardViewLastNameLayout"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_centerInParent="true"
                android:background="@drawable/custombuttonloginpagerouting"
                android:layout_marginBottom="16dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/custombuttonloginpagerouting"
                    app:tint="#ffff" />



                <EditText
                    android:id="@+id/signUpCardViewLastNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:hint="Soyisim"
                    android:textColor="@color/burgundy"
                    android:textSize="15sp"
                    android:background="@null"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/signUpCardViewContinueButtonLayout"
                android:layout_width="250dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:background="@drawable/custombuttonloginpagerouting"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="30dp"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"
                    android:src="@drawable/custombuttonloginpagerouting" />

                <TextView
                    android:id="@+id/signUpCardViewContinueTextButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:text="Devam Et"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </RelativeLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>













