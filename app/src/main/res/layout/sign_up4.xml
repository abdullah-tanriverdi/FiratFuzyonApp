<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white">

        <TextView
            android:id="@+id/iletisimsignUp4Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="İletişim Bilgileri"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="@color/burgundy"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/poppins"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:cardCornerRadius="30dp"
            android:elevation="20dp"
            android:background="@drawable/custombuttonloginpagerouting">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">



                <RelativeLayout
                    android:id="@+id/emailCardViewLayout"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginTop="20dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/custombuttonloginpagerouting"
                    android:layout_marginBottom="16dp"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/custombuttonloginpagerouting"
                        app:tint="#ffff" />

                    <EditText
                        android:id="@+id/emailCardViewEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:hint="Kişisel E-Posta Adresi"
                        android:textColor="@color/burgundy"
                        android:textSize="15sp"
                        android:background="@null"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/phoneNumberCardViewLayout"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/custombuttonloginpagerouting"
                    android:layout_marginBottom="16dp"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/custombuttonloginpagerouting"
                        app:tint="#ffff" />

                    <EditText
                        android:id="@+id/phoneNumberCardViewEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:hint="Telefon Numarası"
                        android:textColor="@color/burgundy"
                        android:textSize="15sp"
                        android:background="@null"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/linkedinCardViewLayout"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/custombuttonloginpagerouting"
                    android:layout_marginBottom="16dp"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/custombuttonloginpagerouting"
                        app:tint="#ffff" />

                    <EditText
                        android:id="@+id/linkedinCardViewEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:hint="LinkedIn Profili"
                        android:textColor="@color/burgundy"
                        android:textSize="15sp"
                        android:background="@null"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/instagramCardViewLayout"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/custombuttonloginpagerouting"
                    android:layout_marginBottom="16dp"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/custombuttonloginpagerouting"
                        app:tint="#ffff" />

                    <EditText
                        android:id="@+id/instagramCardViewEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:hint="Instagram Profili"
                        android:textColor="@color/burgundy"
                        android:textSize="15sp"
                        android:background="@null"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/xCardViewLayout"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/custombuttonloginpagerouting"
                    android:layout_marginBottom="16dp"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/custombuttonloginpagerouting"
                        app:tint="#ffff" />

                    <EditText
                        android:id="@+id/xCardViewEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:hint="X Profili"
                        android:textColor="@color/burgundy"
                        android:textSize="15sp"
                        android:background="@null"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/signUpCardViewContinueButtonLayout"
                    android:layout_width="250dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:background="@drawable/custombuttonloginpagerouting"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="30dp"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/custombuttonloginpagerouting" />

                    <TextView
                        android:id="@+id/signUpCardViewContinueTextButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text="Devam Et"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </RelativeLayout>






            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>





</ScrollView>